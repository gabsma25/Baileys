{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build FACE Game",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-g",
                // Source files
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/Core/Game.cpp",
                "${workspaceFolder}/src/Core/SceneManager.cpp",
                "${workspaceFolder}/src/Scenes/MenuScene.cpp",
                "${workspaceFolder}/src/Scenes/QuizScene.cpp",
                "${workspaceFolder}/src/Scenes/FaceScene.cpp",
                "${workspaceFolder}/src/Utils/FontManager.cpp",
                "${workspaceFolder}/src/Database/DatabaseManager.cpp",
                // Output
                "-o",
                "${workspaceFolder}/face-game.exe",
                // Include paths
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "C:/SFML-3.0.0/include",
                "-I",
                "C:/Program Files/PostgreSQL/16/include",
                // Library paths
                "-L",
                "C:/SFML-3.0.0/lib",
                "-L",
                "C:/Program Files/PostgreSQL/16/lib",
                // Libraries
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lpq",
                // Optimization and warnings
                "-O2",
                "-Wall",
                "-Wextra"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "C:/SFML-3.0.0/bin;C:/mingw64/bin;C:/Program Files/PostgreSQL/16/bin;${env:PATH}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilador configurado para FACE Game"
        }
    ]
}
